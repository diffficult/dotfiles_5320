# Color Variables - Arc Theme
set $base00 #101218
set $base01 #1f222d
set $base02 #252936
set $base03 #7780a1
set $base04 #ffffff
set $base05 #d1d4e0
set $base06 #FF1B6D
set $base07 #1f222d

# Font
font pango: Iosevka, FontAwesome 12

# Workspace-specific gaps
workspace $ws_2 gaps inner 15
workspace $ws_2 gaps outer 0
workspace $ws_8 gaps inner 15
workspace $ws_8 gaps outer 0

# Global gaps
gaps inner 3
gaps outer 1

# Smart gaps (only use gaps if more than one container)
smart_gaps on

# Smart borders (only draw borders if not the only container)
smart_borders on

# Window colors
#                         border  background text    indicator
client.focused            $base01 $base01    $base04 $base07
client.focused_inactive   $base02 $base02    $base03 $base07
client.unfocused          $base02 $base02    $base03 $base07
client.urgent             $base02 $base06    $base00 $base07

# ============================================================================
# STATUS BAR
# ============================================================================

bar {
    status_command i3blocks -c ~/.config/i3/bar/myblocks.conf
    i3bar_command i3bar -t
    verbose yes
    id bar-1
    height 24
    tray_padding 0
    strip_workspace_numbers yes
    font pango: Iosevka, Symbols Nerd Font Mono 12
    position top
    colors {
        separator  $base03
        background $base01
        statusline $base05
        #                          border  background text
        focused_workspace  $base01 $base01    $base04
        active_workspace   $base01 $base02    $base03
        inactive_workspace $base01 $base01    $base03
        urgent_workspace   $base01 $base01    $base06
    }
}
